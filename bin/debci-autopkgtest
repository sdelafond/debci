#!/bin/sh

set -eu

if [ $# -lt 1 ]; then
  echo "usage: $0 [AUTOPKGTEST ARGUMENTS ...]"
  exit 1
fi

opts=''
if [ "$debci_backend" != null ]; then
  opts='--apt-upgrade'
fi

rc=0
autopkgtest \
  --no-built-binaries \
  $opts \
  ${debci_autopkgtest_args:-} \
  "$@" || rc=$?

if [ -n "${debci_test_outputdir:-}" ]; then
  echo $rc > "$debci_test_outputdir/exitcode"
fi
exit $rc
