#!/bin/sh

set -eu

base=$(readlink -f $(dirname $(readlink -f $0))/../..)
cd $base
. $base/lib/environment.sh
. $base/lib/functions.sh

backend="$(dirname "$0")"
. "${backend}/environment.sh"

log "I: Updating $debci_chroot_name (may take a while)"

schroot \
  --chroot "source:${debci_chroot_name}" \
  --user root \
  --directory / \
  -- apt-get update || true

DEBIAN_FRONTEND=noninteractive schroot \
  --chroot "source:${debci_chroot_name}" \
  --directory / \
  --user root \
  -- apt-get install dpkg-dev -q -y --no-install-recommends

DEBIAN_FRONTEND=noninteractive schroot \
  --chroot "source:${debci_chroot_name}" \
  --directory / \
  --user root \
  -- apt-get dist-upgrade -q -y
